<div class="container-fluid mt-4">
  <div class="row">
    <!-- Sidebar with entries -->
    <div class="col-md-3">
      <h4 class="text-white">Your Entries</h4>
      <% if user_signed_in? && @entries.any? %>
        <div class="list-group">
          <% @entries.each do |entry| %>
            <a href="<%= entry_path(entry) %>" class="list-group-item list-group-item-action bg-dark text-white border-0">
              <strong><%= entry.title %></strong><br>
              <small class="text-muted"><%= entry.entry_date %></small>
            </a>
          <% end %>
        </div>
      <% else %>
        <p class="text-muted">No entries yet.</p>
      <% end %>
    </div>

    <!-- Sidebar with conversations -->
    <div class="col-md-3">
      <div class="d-flex justify-content-between align-items-center mb-2">
        <h4 class="text-white mb-0">Conversations</h4>
        <%= button_to "New", conversations_path, method: :post, class: "btn btn-sm btn-primary" %>
      </div>

      <% if user_signed_in? && @conversations&.any? %>
        <div class="list-group">
          <% @conversations.each do |conv| %>
            <div class="d-flex justify-content-between align-items-center list-group-item bg-dark text-white border-0 <%= 'active' if @conversation&.id == conv.id %>">
              <a href="<%= talk_path(conversation_id: conv.id) %>" class="text-white text-decoration-none flex-grow-1">
                <%= conv.title.presence || "Conversation #{conv.id}" %>
              </a>
              <%= button_to "Ã—",
                            conversation_path(conv),
                            method: :delete,
                            class: "btn btn-sm btn-danger ms-2",
                            form: { data: { turbo_confirm: "Delete this conversation?" } } %>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-muted">No conversations yet.</p>
      <% end %>
    </div>

    <!-- Main chat area -->
    <div class="col-md-6">
      <h2 class="text-white mb-3">Talk with the Journal</h2>

      <!-- Quick options -->
      <div class="mb-3 d-flex flex-wrap gap-2">
        <button class="btn quick-option">Interpret a Dream</button>
        <button class="btn quick-option">Share an Idea</button>
        <button class="btn quick-option">Reflect on a Reflection</button>
      </div>

      <!-- Conversation box -->
      <div class="card mb-3 chat-window" style="height: 400px; overflow-y: auto;">
        <div class="card-body" id="chat-messages">
          <% if @messages.present? %>
            <% @messages.each do |msg| %>
              <% role    = msg["role"] || msg[:role] || msg.role %>
              <% content = msg["content"] || msg[:content] || msg.content %>

              <div class="<%= role.to_s == "user" ? 'chat-row user-row' : 'chat-row journal-row' %>">
                <div class="chat-message <%= role.to_s == "user" ? 'user-message' : 'journal-message' %>">
                  <%= content.presence || "[no content]" %>
                </div>
              </div>
            <% end %>
          <% else %>
            <p class="text-muted mb-0">Select a conversation or start a new one.</p>
          <% end %>
        </div>
      </div>

      <!-- Loading spinner (hidden by default) -->
      <div id="loading-spinner" class="text-center my-2" style="display:none;">
        <div class="spinner-border text-light" role="status">
          <span class="visually-hidden">Loading...</span>
        </div>
      </div>


      <!-- Input box -->
      <%= form_with url: chat_path(conversation_id: @conversation&.id), scope: :chat, method: :post, local: true do |f| %>
        <div class="input-group">
          <%= f.text_field :message, class: "form-control chat-input", placeholder: "Type your message here..." %>
          <button class="btn btn-outline-light" type="submit" <%= 'disabled' unless @conversation %>>Send</button>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const chatMessages = document.getElementById("chat-messages");
        if (chatMessages) {
            chatMessages.scrollTop = chatMessages.scrollHeight;
        }

        // Show spinner when form submits
        const chatForm = document.querySelector("form[action*='chat']");
        if (chatForm) {
            chatForm.addEventListener("submit", () => {
                document.getElementById("loading-spinner").style.display = "block";
            });
        }
    });
</script>
