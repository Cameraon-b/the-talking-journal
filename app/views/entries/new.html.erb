<h1>New Journal Entry</h1>

<div class="container mt-5">
  <div class="card shadow-sm">
    <div class="card-body">
      <h2 class="card-title mb-4">New Journal Entry</h2>

      <%= form_with model: @entry, local: true do |form| %>
        <div class="mb-3">
          <%= form.label :title, class: "form-label" %>
          <%= form.text_field :title, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :content, class: "form-label" %>
          <%= form.text_area :content, rows: 6, class: "form-control" %>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <%= form.label :entry_date, class: "form-label" %>
            <%= form.date_field :entry_date, class: "form-control" %>
          </div>
          <div class="col-md-6 mb-3">
            <%= form.label :entry_time, class: "form-label" %>
            <%= form.time_field :entry_time, class: "form-control" %>
          </div>
        </div>

        <div class="mb-3">
          <%= form.label :tags, class: "form-label" %>
          <%= form.text_field :tags, placeholder: "e.g., dream, reflection", class: "form-control" %>
        </div>

        <%= form.submit "Save Entry", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

