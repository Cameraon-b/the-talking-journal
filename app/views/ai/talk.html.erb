<div class="container-fluid mt-4">
  <div class="row">
    <!-- Sidebar with conversations (left) -->
    <div class="col-md-3">
      <div class="d-flex justify-content-between align-items-center mb-2">
        <h4 class="text-white">Conversations</h4>
        <%= button_to "New", conversations_path, method: :post, class: "btn btn-sm btn-primary" %>
      </div>

      <% if @conversations.any? %>
        <div class="list-group">
          <% @conversations.each do |conv| %>
            <div class="d-flex justify-content-between align-items-center list-group-item bg-dark text-white border-0 <%= 'active' if @conversation&.id == conv.id %>">
              <a href="<%= talk_path(conversation_id: conv.id) %>" class="text-white text-decoration-none flex-grow-1">
                <%= conv.title %>
              </a>
              <%= button_to "Ã—", conversation_path(conv), method: :delete,
                            class: "btn btn-sm btn-danger ms-2",
                            form: { data: { turbo_confirm: "Delete this conversation?" } } %>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-muted">No conversations yet.</p>
      <% end %>
    </div>

    <!-- Main chat area (middle) -->
    <div class="col-md-6">
      <h2 class="text-white mb-3">Talk with the Journal</h2>

      <div class="card mb-3 chat-window" style="height: 400px; overflow-y: auto; background-color:#3a3a3a;">
        <div class="card-body" id="chat-messages">
          <% if @messages.present? %>
            <% @messages.each do |msg| %>
              <div class="<%= msg.role.to_s == "user" ? 'chat-row user-row' : 'chat-row journal-row' %>">
                <div class="chat-message <%= msg.role.to_s == "user" ? 'user-message' : 'journal-message' %>">
                  <%= msg.content.presence || "[no content]" %>
                </div>
              </div>
            <% end %>
          <% else %>
            <p class="text-muted">No messages yet. Start a conversation below!</p>
          <% end %>
        </div>
      </div>

      <% if @conversation %>
        <%= form_with url: chat_path(conversation_id: @conversation.id), scope: :chat, method: :post, local: true do |f| %>
          <div class="input-group">
            <%= f.text_field :message, class: "form-control chat-input", placeholder: "Type your message here..." %>
            <button class="btn btn-outline-light" type="submit">Send</button>
          </div>
        <% end %>
      <% else %>
        <p class="text-muted">Start a new conversation to begin chatting.</p>
      <% end %>
    </div>

    <!-- Sidebar with entries (right) -->
    <div class="col-md-3">
      <h4 class="text-white">Your Entries</h4>
      <% if user_signed_in? && @entries.any? %>
        <div class="list-group">
          <% @entries.each do |entry| %>
            <a href="<%= entry_path(entry) %>" class="list-group-item list-group-item-action bg-dark text-white border-0">
              <strong><%= entry.title %></strong><br>
              <small class="text-muted"><%= entry.entry_date %></small>
            </a>
          <% end %>
        </div>
      <% else %>
        <p class="text-muted">No entries yet.</p>
      <% end %>
    </div>
  </div>
</div>

<script>
    const chatMessages = document.getElementById("chat-messages");
    if (chatMessages) {
        chatMessages.scrollTop = chatMessages.scrollHeight;
    }
</script>
