<h1>Edit Entry</h1>

<div class="card mt-4">
  <div class="card-body">
    <h2 class="card-title mb-3">Edit Entry</h2>

    <%= form_with(model: @entry, local: true) do |form| %>
      <div class="mb-3">
        <%= form.label :title, class: "form-label" %>
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :content, class: "form-label" %>
        <%= form.text_area :content, class: "form-control", rows: 5 %>
      </div>

      <div class="mb-3">
        <%= form.label :tags, class: "form-label" %>
        <%= form.text_field :tags, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :entry_date, class: "form-label" %>
        <%= form.date_field :entry_date, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :entry_time, class: "form-label" %>
        <%= form.time_field :entry_time, class: "form-control" %>
      </div>

      <div class="mt-3">
        <%= form.submit "Update Entry", class: "btn btn-sm" %>
        <%= link_to "Cancel", entry_path(@entry), class: "btn btn-sm" %>
      </div>
    <% end %>
  </div>
</div>

