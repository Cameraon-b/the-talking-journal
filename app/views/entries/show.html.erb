<div class="card mt-4">
  <div class="card-body">
    <h2 class="card-title"><%= @entry.title %></h2>
    <p class="card-text"><%= @entry.content %></p>
    <span class="badge"><%= @entry.tags %></span>
    <p class="mt-3"><em><%= @entry.entry_date %></em></p>

    <div class="mt-3">
      <%= link_to "Back", entries_path, class: "btn btn-sm" %>
      <%= link_to "Edit", edit_entry_path(@entry), class: "btn btn-sm" %>
      <%= button_to "Delete", @entry, method: :delete,
                    data: { confirm: "Are you sure?" },
                    class: "btn btn-sm" %>
    </div>
  </div>
</div>
