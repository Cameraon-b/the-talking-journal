<!DOCTYPE html>
<html>
<head>
  <title>The Talking Journal</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <%= javascript_importmap_tags %>
</head>

<!-- Custom Dark Theme -->
<style>
    body {
        background-color: #2b2b2b;
        color: #ffffff;
    }

    .card {
        background-color: #3a3a3a;
        color: #ffffff;
    }

    .navbar {
        background-color: #1e1e1e !important;
    }

    /* Buttons */
    .btn {
        background-color: #2a2a2a !important;
        color: #ffffff !important;
        border: 1px solid #444444 !important;
    }

    .btn:hover {
        background-color: #3a3a3a !important;
        border-color: #555555 !important;
    }

    .btn-primary,
    .btn-outline-secondary {
        background-color: #2a2a2a !important;
        color: #ffffff !important;
        border: 1px solid #444444 !important;
    }

    .btn-primary:hover,
    .btn-outline-secondary:hover {
        background-color: #3a3a3a !important;
        border-color: #555555 !important;
    }

    .badge {
        background-color: #555555 !important;
        color: #ffffff !important;
        font-weight: normal;
    }

    .alert {
        background-color: #444444;
        color: #ffffff;
        border: none;
    }

    a, .nav-link {
        color: #ffffff !important;
    }

    a:hover, .nav-link:hover {
        color: #4a90e2 !important;
    }

    input, textarea, select {
        background-color: #2b2b2b !important;
        color: #ffffff !important;
        border: 1px solid #555555;
    }

    input::placeholder, textarea::placeholder {
        color: #aaaaaa;
    }

    input:focus, textarea:focus, select:focus {
        background-color: #333333 !important;
        border-color: #4a90e2;
        color: #ffffff !important;
        box-shadow: 0 0 5px rgba(74, 144, 226, 0.5);
    }

    .lead.text-muted {
        color: #bbbbbb !important;
    }

    /* Entry cards */
    .entry-show, .entry-container {
        background-color: #3a3a3a;
        color: #ffffff;
        padding: 20px;
        border-radius: 8px;
    }

    .card-text {
        color: #dddddd !important;
    }

    /* ---------------- Chat Window ---------------- */
    .chat-window {
        background-color: #2b2b2b;
        border: none;
    }

    .chat-row {
        display: flex;
        width: 100%;
        margin-bottom: 10px;
    }

    .user-row {
        justify-content: flex-end;
    }

    .journal-row {
        justify-content: flex-start;
    }

    .chat-message {
        max-width: 70%;
        padding: 10px 15px;
        border-radius: 15px;
        word-wrap: break-word;
    }

    .user-message {
        background-color: #4a4a4a;
        color: #fff;
        text-align: right;
    }

    .journal-message {
        background-color: #3a3a3a;
        color: #fff;
        text-align: left;
    }

    .chat-input {
        background-color: #1e1e1e;
        color: white;
        border: 1px solid #555;
    }

    .chat-input::placeholder {
        color: #aaa;
    }

    /* ---------------- Typing Indicator ---------------- */
    .typing-indicator {
        font-style: italic;
        color: #bbb;
        animation: pulse 1s infinite ease-in-out;
    }

    @keyframes pulse {
        0%, 100% { opacity: 0.3; }
        50% { opacity: 1; }
    }
    .typing-indicator::after {
        content: '...';
        display: inline-block;
        animation: dots 1.2s steps(3, end) infinite;
    }

    @keyframes dots {
        0%, 20% { content: '.'; }
        40% { content: '..'; }
        60%, 100% { content: '...'; }
    }
</style>

<body>
<%= turbo_stream_from current_user if user_signed_in? %>
<!-- Bootstrap Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="<%= root_path %>">The Talking Journal</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "About", about_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Talk", talk_path, class: "nav-link" %>
        </li>
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "New Entry", new_entry_path, class: "nav-link" %>
          </li>
          <li class="nav-item d-flex align-items-center">
            <span class="text-light me-2">Signed in as <%= current_user.email %></span>
            <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-outline-light btn-sm" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Sign In", new_user_session_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-primary ms-2" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>

<!-- Flash Messages -->
<div class="container mt-3">
  <% flash.each do |key, value| %>
    <div class="alert <%= key == "notice" ? "alert-success" : "alert-danger" %> alert-dismissible fade show" role="alert">
      <%= value %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
</div>

<!-- Page Content -->
<div class="container mt-4">
  <%= yield %>
</div>
</body>
</html>
