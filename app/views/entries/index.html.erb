<div class="text-center my-4">
  <p class="lead text-muted">Your reflections, dreams, and thoughts</p>
</div>

<% if @entries.any? %>
  <div class="row">
    <% @entries.each do |entry| %>
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="card shadow-sm h-100">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= entry.title %></h5>
            <p class="card-text text-muted">
              <%= truncate(entry.content, length: 100) %>
            </p>
            <p class="small text-secondary mb-2">
              <%= entry.entry_date %> <% if entry.entry_time.present? %>at <%= entry.entry_time %><% end %>
            </p>
            <span class="badge bg-info text-dark mb-3"><%= entry.tags %></span>
            <div class="mt-auto">
              <%= link_to "View", entry, class: "btn btn-sm btn-primary" %>
              <%= link_to "Edit", edit_entry_path(entry), class: "btn btn-sm btn-outline-secondary" %>
              <%= button_to "Delete", entry, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="alert alert-info text-center">
    No entries yet. <%= link_to "Create one now!", new_entry_path, class: "alert-link" %>
  </div>
<% end %>
