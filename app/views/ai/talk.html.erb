<div class="container-fluid mt-4">
  <div class="row">

    <!-- Conversations sidebar -->
    <div class="col-md-3">
      <div class="d-flex justify-content-between align-items-center mb-2">
        <h4 class="text-white">Conversations</h4>
        <%= button_to "New", conversations_path, method: :post, class: "btn btn-sm btn-primary" %>
      </div>

      <% if @conversations.any? %>
        <div class="list-group">
          <% @conversations.each do |conv| %>
            <div class="list-group-item bg-dark text-white border-0 <%= 'active' if @conversation&.id == conv.id %>">
              <div class="d-flex justify-content-between align-items-center">
                <a href="<%= talk_path(conversation_id: conv.id) %>" class="text-white text-decoration-none flex-grow-1">
                  <%= conv.title %>
                </a>

                <button class="btn btn-sm btn-outline-light ms-2" type="button" onclick="toggleRenameForm(<%= conv.id %>)">✎</button>

                <%= button_to "×", conversation_path(conv),
                              method: :delete,
                              class: "btn btn-sm btn-danger ms-2",
                              form: { data: { turbo_confirm: 'Delete this conversation?' } } %>
              </div>

              <div id="rename-form-<%= conv.id %>" style="display:none;" class="mt-2">
                <%= form_with(model: conv, url: conversation_path(conv), method: :patch, local: true) do |f| %>
                  <div class="input-group input-group-sm">
                    <%= f.text_field :title, value: conv.title, class: "form-control form-control-sm" %>
                    <button class="btn btn-primary btn-sm" type="submit">Save</button>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-muted">No conversations yet.</p>
      <% end %>
    </div>

    <!-- Main chat area -->
    <div class="col-md-6">
      <h2 class="text-white mb-3">Talk with the Journal</h2>

      <%= render partial: "ai/chat_window",
                 locals: { conversation: @conversation, messages: @messages } %>

      <% if @conversation %>
        <%= form_with url: chat_path(conversation_id: @conversation.id),
                      scope: :chat,
                      method: :post,
                      local: true do |f| %>
          <div class="input-group mt-2">
            <%= f.text_field :message,
                             class: "form-control chat-input",
                             placeholder: "Type your message here..." %>
            <button class="btn btn-outline-light" type="submit">Send</button>
          </div>
        <% end %>
      <% else %>
        <p class="text-muted">Start a new conversation to begin chatting.</p>
      <% end %>
    </div>

    <!-- Entries sidebar -->
    <div class="col-md-3">
      <h4 class="text-white">Your Entries</h4>
      <% if user_signed_in? && @entries.any? %>
        <div class="list-group">
          <% @entries.each do |entry| %>
            <a href="<%= entry_path(entry) %>" class="list-group-item list-group-item-action bg-dark text-white border-0">
              <strong><%= entry.title %></strong><br>
              <small class="text-muted"><%= entry.entry_date %></small>
            </a>
          <% end %>
        </div>
      <% else %>
        <p class="text-muted">No entries yet.</p>
      <% end %>
    </div>
  </div>
</div>

<script>
    function toggleRenameForm(id) {
        const form = document.getElementById(`rename-form-${id}`);
        form.style.display = form.style.display === "none" ? "block" : "none";
    }
</script>

<script>
    document.addEventListener("turbo:load", () => {
        setTimeout(() => {
            const chatMessages = document.getElementById("chat-messages");
            if (chatMessages) chatMessages.scrollTo({ top: chatMessages.scrollHeight, behavior: "instant" });
        }, 200);
    });
</script>
