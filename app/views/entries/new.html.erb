<h1>New Journal Entry</h1>

<div style="background:#fff; padding:20px; border-radius:8px; box-shadow:0 2px 5px rgba(0,0,0,0.1); max-width:600px;">
  <%= form_with(model: @entry, local: true) do |form| %>
    <div style="margin-bottom:15px;">
      <%= form.label :title %><br>
      <%= form.text_field :title, style:"width:100%; padding:8px;" %>
    </div>

    <div style="margin-bottom:15px;">
      <%= form.label :content %><br>
      <%= form.text_area :content, rows:8, style:"width:100%; padding:8px;" %>
    </div>

    <div style="margin-bottom:15px;">
      <%= form.label :entry_date, "Date" %><br>
      <%= form.date_field :entry_date, style:"padding:8px;" %>
    </div>

    <div style="margin-bottom:15px;">
      <%= form.label :entry_time, "Time" %><br>
      <%= form.time_field :entry_time, style:"padding:8px;" %>
    </div>

    <div style="margin-bottom:15px;">
      <%= form.label :tags, "Tags (comma separated)" %><br>
      <%= form.text_field :tags, placeholder:"dream, oobe, reflection", style:"width:100%; padding:8px;" %>
    </div>

    <div>
      <%= form.submit "Save Entry", style:"background:#333; color:white; padding:10px 15px; border:none; border-radius:4px;" %>
    </div>
  <% end %>
</div>
